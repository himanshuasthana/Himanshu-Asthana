<section class="product-grid-section" style="background-color: {{ section.settings.background_color }};">
  <div class="product-grid__container" style="max-width: {{ section.settings.max_width }}px;">
    {%- if section.settings.heading != blank -%}
      <h2 class="product-grid__heading" style="
        font-size: {{ section.settings.heading_font_size }}px;
        color: {{ section.settings.heading_color }};
        text-align: {{ section.settings.heading_alignment }};
        font-weight: {{ section.settings.heading_weight }};
        {% if section.settings.heading_italic %}font-style: italic;{% endif %}
      ">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="product-grid__description" style="
        color: {{ section.settings.description_color }};
        text-align: {{ section.settings.heading_alignment }};
        font-size: {{ section.settings.description_font_size }}px;
      ">
        {{ section.settings.description }}
      </p>
    {%- endif -%}

    <div class="product-grid__grid" style="
      gap: {{ section.settings.grid_gap }}px;
      --columns-desktop: {{ section.settings.columns_desktop }};
      --columns-tablet: {{ section.settings.columns_tablet }};
      --columns-mobile: {{ section.settings.columns_mobile }};
    ">
      {%- for block in section.blocks -%}
        <div class="product-grid__item" {{ block.shopify_attributes }}>
          <div class="product-grid__image-wrapper" style="
            aspect-ratio: {{ section.settings.image_aspect_ratio }};
            border-radius: {{ section.settings.image_border_radius }}px;
          ">
            {%- if block.settings.image != blank -%}
              <img 
                src="{{ block.settings.image | image_url: width: 800 }}"
                srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                        {{ block.settings.image | image_url: width: 600 }} 600w,
                        {{ block.settings.image | image_url: width: 800 }} 800w"
                sizes="(max-width: 768px) 50vw, 33vw"
                alt="{{ block.settings.image_alt | default: block.settings.product_title }}"
                loading="lazy"
                class="product-grid__image"
              >
            {%- else -%}
              <div class="product-grid__placeholder">
                {{ 'image' | placeholder_svg_tag: 'product-grid__placeholder-svg' }}
              </div>
            {%- endif -%}

            {%- if block.settings.show_hotspot -%}
              <a 
                href="{{ block.settings.hotspot_link | default: '#' }}"
                class="product-grid__hotspot"
                style="
                  top: {{ block.settings.hotspot_position_y }}%;
                  left: {{ block.settings.hotspot_position_x }}%;
                  background-color: {{ section.settings.hotspot_bg_color }};
                  width: {{ section.settings.hotspot_size }}px;
                  height: {{ section.settings.hotspot_size }}px;
                "
                aria-label="{{ block.settings.product_title | default: 'View product' }}"
              >
                <span class="product-grid__hotspot-icon" style="color: {{ section.settings.hotspot_icon_color }};">
                  {%- if section.settings.hotspot_icon == 'plus' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  {%- elsif section.settings.hotspot_icon == 'bag' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                      <line x1="3" y1="6" x2="21" y2="6"></line>
                      <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                  {%- elsif section.settings.hotspot_icon == 'eye' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                  {%- else -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  {%- endif -%}
                </span>
              </a>

              {%- if block.settings.show_tooltip and block.settings.product_title != blank -%}
                <div class="product-grid__tooltip" style="
                  top: {{ block.settings.hotspot_position_y }}%;
                  left: {{ block.settings.hotspot_position_x }}%;
                  background-color: {{ section.settings.tooltip_bg_color }};
                  color: {{ section.settings.tooltip_text_color }};
                ">
                  <span class="product-grid__tooltip-title">{{ block.settings.product_title }}</span>
                  {%- if block.settings.product_price != blank -%}
                    <span class="product-grid__tooltip-price">{{ block.settings.product_price }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endif -%}

            {%- if section.settings.show_overlay -%}
              <div class="product-grid__overlay" style="
                background: {{ section.settings.overlay_color }};
                opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
              "></div>
            {%- endif -%}
          </div>

          {%- if block.settings.show_caption and block.settings.caption_text != blank -%}
            <div class="product-grid__caption" style="color: {{ section.settings.caption_color }};">
              {{ block.settings.caption_text }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_text != blank -%}
      <div class="product-grid__cta" style="text-align: {{ section.settings.heading_alignment }};">
        <a 
          href="{{ section.settings.button_link }}" 
          class="product-grid__button"
          style="
            background-color: {{ section.settings.button_bg_color }};
            color: {{ section.settings.button_text_color }};
            border-radius: {{ section.settings.button_border_radius }}px;
          "
        >
          {{ section.settings.button_text }}
          {%- if section.settings.button_show_arrow -%}
            <span class="product-grid__button-arrow">â†’</span>
          {%- endif -%}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .product-grid-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .product-grid__container {
    margin: 0 auto;
    padding: 0 {{ section.settings.side_padding }}px;
  }

  .product-grid__heading {
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px;
    line-height: 1.2;
    font-family: {{ section.settings.heading_font }};
  }

  .product-grid__description {
    margin: 0 0 {{ section.settings.description_margin_bottom }}px;
    line-height: 1.6;
    max-width: 600px;
    {% if section.settings.heading_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% elsif section.settings.heading_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  .product-grid__grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-desktop), 1fr);
  }

  .product-grid__item {
    position: relative;
  }

  .product-grid__image-wrapper {
    position: relative;
    overflow: hidden;
  }

  .product-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .product-grid__item:hover .product-grid__image {
    transform: scale({{ section.settings.image_hover_scale }});
  }

  .product-grid__placeholder {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-grid__placeholder-svg {
    width: 50%;
    height: 50%;
    fill: #cccccc;
  }

  .product-grid__hotspot {
    position: absolute;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .product-grid__hotspot:hover {
    transform: translate(-50%, -50%) scale(1.1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .product-grid__hotspot-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-grid__hotspot-icon svg {
    width: {{ section.settings.hotspot_icon_size }}px;
    height: {{ section.settings.hotspot_icon_size }}px;
  }

  .product-grid__tooltip {
    position: absolute;
    transform: translate(-50%, calc(-100% - {{ section.settings.hotspot_size | plus: 15 }}px));
    padding: 10px 14px;
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 15;
    white-space: nowrap;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    pointer-events: none;
  }

  .product-grid__tooltip::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 6px solid {{ section.settings.tooltip_bg_color }};
  }

  .product-grid__item:hover .product-grid__tooltip {
    opacity: 1;
    visibility: visible;
  }

  .product-grid__tooltip-title {
    font-size: 14px;
    font-weight: 600;
  }

  .product-grid__tooltip-price {
    font-size: 13px;
    opacity: 0.85;
  }

  .product-grid__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .product-grid__item:hover .product-grid__overlay {
    opacity: 0 !important;
  }

  .product-grid__caption {
    margin-top: 12px;
    font-size: {{ section.settings.caption_font_size }}px;
    text-align: center;
    font-weight: 500;
  }

  .product-grid__cta {
    margin-top: {{ section.settings.button_margin_top }}px;
  }

  .product-grid__button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: all 0.3s ease;
  }

  .product-grid__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .product-grid__button-arrow {
    font-size: 16px;
    transition: transform 0.3s ease;
  }

  .product-grid__button:hover .product-grid__button-arrow {
    transform: translateX(5px);
  }

  /* Tablet Styles */
  @media screen and (max-width: 991px) {
    .product-grid__grid {
      grid-template-columns: repeat(var(--columns-tablet), 1fr);
    }

    .product-grid__heading {
      font-size: {{ section.settings.heading_font_size | times: 0.8 }}px !important;
    }
  }

  /* Mobile Styles */
  @media screen and (max-width: 767px) {
    .product-grid-section {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .product-grid__container {
      padding: 0 {{ section.settings.mobile_side_padding }}px;
    }

    .product-grid__grid {
      grid-template-columns: repeat(var(--columns-mobile), 1fr);
      gap: {{ section.settings.mobile_grid_gap }}px !important;
    }

    .product-grid__heading {
      font-size: {{ section.settings.heading_font_size | times: 0.65 }}px !important;
    }

    .product-grid__tooltip {
      display: none;
    }
  }
</style>

