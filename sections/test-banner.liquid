<section class="gift-banner">
  <div class="gift-banner__background">
    {%- if section.settings.background_image != blank -%}
      <img 
        src="{{ section.settings.background_image | image_url: width: 2000 }}"
        srcset="{{ section.settings.background_image | image_url: width: 800 }} 800w,
                {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.background_image | image_url: width: 1600 }} 1600w,
                {{ section.settings.background_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ section.settings.heading }}"
        loading="eager"
        class="gift-banner__bg-image"
      >
    {%- else -%}
      <div class="gift-banner__bg-placeholder"></div>
    {%- endif -%}
  </div>

  <div class="gift-banner__container">
    <div class="gift-banner__content" style="max-width: {{ section.settings.content_max_width }}px;">
      {%- if section.settings.subheading != blank -%}
        <span class="gift-banner__subheading">{{ section.settings.subheading }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="gift-banner__heading" style="font-size: {{ section.settings.heading_font_size }}px;">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="gift-banner__description">
          <p>{{ section.settings.description }}</p>
        </div>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a 
          href="{{ section.settings.button_link }}" 
          class="gift-banner__button"
          style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
        >
          {{ section.settings.button_text }}
          <span class="gift-banner__arrow">â†’</span>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .gift-banner {
    position: relative;
    min-height: {{ section.settings.min_height }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .gift-banner__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .gift-banner__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_position }};
  }

  .gift-banner__bg-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  }

  .gift-banner__container {
    position: relative;
    z-index: 2;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.padding_top }}px 40px {{ section.settings.padding_bottom }}px;
    display: flex;
    align-items: {{ section.settings.vertical_alignment }};
    min-height: {{ section.settings.min_height }}px;
  }

  .gift-banner__content {
    {% if section.settings.content_background %}
      background-color: {{ section.settings.content_bg_color }};
      padding: 40px;
      border-radius: 8px;
    {% endif %}
  }

  .gift-banner__subheading {
    display: block;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: {{ section.settings.text_color }};
    margin-bottom: 16px;
  }

  .gift-banner__heading {
    font-family: {{ section.settings.heading_font }};
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.1;
    color: {{ section.settings.text_color }};
    margin: 0 0 20px;
    {% if section.settings.heading_italic %}
      font-style: italic;
    {% endif %}
  }

  .gift-banner__description {
    max-width: 400px;
    margin-bottom: 32px;
  }

  .gift-banner__description p {
    margin: 0;
    font-size: {{ section.settings.description_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    opacity: 0.85;
  }

  .gift-banner__button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: all 0.3s ease;
  }

  .gift-banner__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .gift-banner__arrow {
    font-size: 18px;
    transition: transform 0.3s ease;
  }

  .gift-banner__button:hover .gift-banner__arrow {
    transform: translateX(5px);
  }

  @media screen and (max-width: 768px) {
    .gift-banner {
      min-height: {{ section.settings.mobile_min_height }}px;
    }

    .gift-banner__container {
      padding: 60px 20px;
      min-height: {{ section.settings.mobile_min_height }}px;
    }

    .gift-banner__heading {
      font-size: {{ section.settings.heading_font_size | divided_by: 1.5 }}px !important;
    }

    .gift-banner__content {
      max-width: 100% !important;
    }
  }
</style>

